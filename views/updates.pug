doctype html
html 
    head 
        title=title
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Add a Valorant Agent
        form(action="/update-cobj", method="POST")
            label(for="name") Name:
            input(type="text", name="name", required)
            br
            label(for="agent_type") Agent Type:
            input(type="text", name="agent_type", required)
            br
            label(for="ultimate") Ultimate:
            input(type="text", name="ultimate", required)
            br
            button(type="submit") Add Agent
        br
        a(href="/") Return to the homepage